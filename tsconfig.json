{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2018",                          
    "module": "NodeNext",
    "lib": ["es2017"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "paths": {
      "*": ["*"],
      "commands/*": ["commands/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
