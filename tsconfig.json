{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "ES6",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node"
  }
}
