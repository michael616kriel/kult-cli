{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "module": "NodeNext",
    "lib": ["es2017"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": false,
    "strictPropertyInitialization": false,
    "declaration": true
  }
}
